@page
@model BulkyWeb_RazorPages.Pages.Categories.DeleteModel
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        
        <input asp-for="Category.Id" hidden />
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" class="form-control" />
        
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" asp-page="Category/Index" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6" col-md-3>
                <a asp-page="Category/Index" class="btn btn-secondary form-control border">Back to List</a>
            </div>
        </div>

    </div>
</form>





