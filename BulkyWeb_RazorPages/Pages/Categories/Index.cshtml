@page
@model BulkyWeb_RazorPages.Pages.Categories.IndexModel
<h1>Category List</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-square-dotted"></i> Create new Category
            </a>
        </div>
    </div>
</div>
<table class=" table table table-bordered table table-striped">
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
    </tr>
        <tbody>
        @foreach (var item in Model.CategoryLists.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group" >
                        <a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash2-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
</table>